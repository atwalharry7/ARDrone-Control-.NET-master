<Window x:Class="ARDrone.UI.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen" Height="368" Width="363" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded" BorderBrush="Black" BorderThickness="2" ShowInTaskbar="False">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Name="labelProgress" Content="Starting...">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.221" />
                    <GradientStop Color="#63000000" Offset="1" />
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Win AR Drone [BETA]" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" Width="238" />
        <Label Content="Original code by Thomas Endres, Steve Hobley" Height="31" HorizontalAlignment="Left" Margin="12,224,0,0" Name="label2" VerticalAlignment="Top" Width="337" FontStretch="Normal" ClipToBounds="False" />
        <Label Content="Current version by Rob Quist" Height="28" HorizontalAlignment="Left" Margin="12,269,0,0" Name="label3" VerticalAlignment="Top" />
        <Label Content="and Julien Vinel" Height="28" HorizontalAlignment="Left" Margin="12,238,0,0" Name="label4" VerticalAlignment="Top" />
        <Button Content="Visit website" Height="22" HorizontalAlignment="Left" Margin="12,46,0,0" Name="button1" VerticalAlignment="Top" Width="163" Click="button1_Click" />
    </Grid>
</Window>
